<!--pages/movable/movable.wxml-->
<wxs module="test" src="./movable.wxs"></wxs> 
<view class="area" style='position:relative;width:100%;height:100%;'>
  <view wxs:bindtouchstart="{{test.touchstart}}" wxs:bindtouchmove="{{test.touchmove}}" wxs:bindtouchend='{{test.touchmove}}' class="movable" style="position:absolute;width:100px;height:100px;background:red;left:{{left}}px;top:{{top}}px"></view>
</view>